#include <iostream>
#include <string>
using namespace std;


bool isVowel(char c) {
    c = tolower(c);
    return (c=='a' || c=='e' || c=='i' || c=='o' || c=='u');
}


string myReverse(string s) {
    string r = "";
    for(int i=s.size()-1; i>=0; i--) {
        r += s[i];
    }
    return r;
}


string encrypt(string word) {
    string cons="";
    for(int i=0;i<word.size();i++) {
        if(!isVowel(word[i])) cons += word[i];
    }
    string rev = myReverse(cons);
    int ascii = (int)word[0];
    string code = to_string(ascii);
    int pos = (rev.size()+1)/2;
    return rev.substr(0,pos) + code + rev.substr(pos);
}

 {
    string angka="", huruf="";
    for(int i=0;i<sandi.size();i++) {
        if(isdigit(sandi[i])) angka += sandi[i];
        else huruf += sandi[i];
    }
    int ascii = stoi(angka);
    char first = (char)ascii;
    string cons = myReverse(huruf);

    cout << "Password : " << sandi << endl;
    cout << "Huruf pertama (dari ASCII): " << first << endl;
    cout << "Konsonan asli (urutan): " << cons << endl;
}

int main() {
    cout << "=== Demo Enkripsi ===" << endl;
    cout << "banana -> " << encrypt("banana") << endl;
    cout << "Jakarta -> " << encrypt("Jakarta") << endl;
    cout << "TANGERANG -> " << encrypt("TANGERANG") << endl;

    cout << "\n=== Partial Decode ===" << endl;
    partialDecode("nm71rG"); 
}
